ifeq ($(WHICHFILE),true)
$(info Processing $(lastword $(MAKEFILE_LIST)))
endif

# Validate list of supported cores
ifeq ($(CORE),CM33)
TFM_CORE=cm33
else ifeq ($(CORE),CM55)
TFM_CORE=cm55
else
$(error "Unsupported CORE=$(CORE) variable. TFM for PSE86 supports CM33, CM55 only.")
endif

ifeq ($(DEVICE_MODE),SECURE)
################################################################################
# Secure build
################################################################################
ifeq ($(VFP_SELECT),softfloat)
TFM_CONFIGURE_OPTIONS+= -DCONFIG_TFM_ENABLE_FP:BOOL=OFF
else
# softpf is not supported by TF-M thus hardfp will be used instead
TFM_CONFIGURE_OPTIONS+= -DCONFIG_TFM_ENABLE_FP:BOOL=ON
endif # ($(VFP_SELECT),softfloat)

# Use IFX_MTB_SRF_LIB_PATH to specify custom MTB SRF library location
$(eval $(call TFM_SETUP_MTB_LIBRARY,IFX_MTB_SRF_LIB_PATH,IFX_MTB_SRF_LIB_PATH,SEARCH_mtb-srf))

else # ($(DEVICE_MODE),SECURE)
################################################################################
# Non-secure build
################################################################################
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/interface/include)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/board)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/board/shared)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/board/shared/device/include)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/device/include)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/ext/common)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/ifx/device/include)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/ifx/utils)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/include)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/pse86/shared)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/pse86/shared/device/config)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/pse86/shared/device/include)
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/platform/pse86/shared/partition)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/*.c)
DEFINES+=DOMAIN_NS=1
# SRF configuration
DEFINES+=MTB_SRF_USE_PSA # Make SRF use TFM compatible code

# CM33
ifeq ($(CORE),CM33)
# Use veneer generated by TF-M secure build
NSC_VENEER=$(wildcard ../install/interface/lib/*.o)

ifeq ($(filter $(COMPONENTS),RTOS_AWARE),)
# Bare-metal configuration
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/os_wrapper/tfm_ns_interface_bare_metal.c)
else
# RTOS configuration
DEFINES+=COMPONENT_RTOS_AWARE
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/os_wrapper/os_wrapper_cyabs_rtos.c)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/os_wrapper/tfm_ns_interface_rtos.c)
endif
endif # ($(CORE),CM33)

# CM55
ifeq ($(CORE),CM55)
ifeq ($(filter $(COMPONENTS),RTOS_AWARE),RTOS_AWARE)
# Enable RTOS support for mailbox
DEFINES+=TFM_MULTI_CORE_NS_OS TFM_MULTI_CORE_TOPOLOGY
endif

# Ignore TZ interface
TFM_IGNORE_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/tfm_tz_psa_ns_api.c)

# Mailbox interface
INCLUDES+=$(wildcard $(TFM_INSTALL_PATH)/interface/include/multi_core)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/multi_core/platform_multicore.c)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/multi_core/platform_ns_mailbox.c)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/multi_core/tfm_multi_core_ns_api.c)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/multi_core/tfm_multi_core_psa_ns_api.c)
ifeq ($(filter $(DEFINES),TFM_MULTI_CORE_NS_OS_MAILBOX_THREAD),)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/multi_core/tfm_ns_mailbox.c)
else ifneq ($(filter $(DEFINES),TFM_MULTI_CORE_NS_OS),)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/multi_core/tfm_ns_mailbox_thread.c)
endif
ifneq ($(filter $(DEFINES),TFM_MULTI_CORE_NS_OS),)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/os_wrapper/os_wrapper_cyabs_rtos.c)
TFM_SOURCES+=$(wildcard $(TFM_INSTALL_PATH)/interface/src/multi_core/tfm_ns_mailbox_rtos_api.c)
endif
endif # ($(CORE),CM55)
endif # ($(DEVICE_MODE),SECURE)
